{
  "name": "spacemouse-monorepo",
  "version": "1.0.0",
  "author": "Johan Nyman <johan@nytamin.se>",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nytamin/spaceMouse.git"
  },
  "bugs": {
    "url": "https://github.com/nytamin/spaceMouse/issues"
  },
  "homepage": "https://github.com/nytamin/spaceMouse",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "(rimraf packages/*/dist packages/*/*.tsbuildinfo || true) && run build:main",
    "build:main": "tsc --build tsconfig.build.json --force",
    "build:watch": "run build:main --watch",
    "lint:raw": "run eslint --ext .ts",
    "lint": "run lint:raw .",
    "lint-fix": "run lint --fix",
    "test": "run lint && vitest --run",
    "unit": "vitest",
    "docs": "run docs:html",
    "docs:test": "run docs:html",
    "docs:html": "typedoc --tsconfig tsconfig.build.json",
    "release": "sofie-version",
    "publish:all": "yarn workspaces foreach --all --exclude spacemouse-monorepo --exclude @spacemouse-lib/webhid-demo npm publish --access=public",
    "test:all": "yarn && yarn build && yarn test"
  },
  "devDependencies": {
    "@sofie-automation/code-standard-preset": "^3.2.0",
    "@types/node": "^22.15.29",
    "@vitest/coverage-v8": "3.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.2",
    "prettier": "^3.5.3",
    "rimraf": "^3.0.2",
    "typedoc": "^0.28.5",
    "typescript": "~5.7.0",
    "vitest": "^3.2.0"
  },
  "type": "module",
  "prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
  "packageManager": "yarn@4.10.3"
}
